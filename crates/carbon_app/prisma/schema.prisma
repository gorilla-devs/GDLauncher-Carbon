datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "cargo prisma"
  output   = "../src/db.rs"
}

model AppConfiguration {
  id                 Int     @id @default(0)
  theme              String  @default("main")
  reducedMotion      Boolean @default(false)
  discordIntegration Boolean @default(true)
  releaseChannel     String  @default("stable")
  activeAccountUuid  String?
}

model Account {
  uuid             String   @id
  username         String
  // presence signifies a microsoft account
  accessToken      String?
  tokenExpires     DateTime?
  msRefreshToken   String?
  lastUsed DateTime
}

model MinecraftManifest {
  id          String @unique
  type        String
  url         String
  time        String
  releaseTime String
  sha1        String @unique
}

model MinecraftVersion {
  id   String @unique
  json Bytes
}

model MinecraftAssets {
  assetsIdSha1 String @unique
  json         Bytes
}

model ActiveDownloads {
  url     String @id
  file_id String @unique
}
