---
import DownloadSection from "@/components/DownloadSection";
import DonateKofiSection from "@/components/DonateKofiSection/index.astro";
import PartnerSection from "@/components/PartnerSection/index.astro";
import languages from "@/i18n/languages";
import MainWrapper from "@/layouts/MainWrapper.astro";

export const getStaticPaths = () => Object.keys(languages).map((lang) => ({ params: { lang } }));
---

<MainWrapper>
    <div>
        <DownloadSection client:idle pathname={Astro.url.pathname || ""} />
        <DonateKofiSection />
        <PartnerSection />
    </div>
</MainWrapper>
