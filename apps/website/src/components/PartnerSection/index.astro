---
import { useTranslations } from "@/i18n/utils";
import composeCDNAssetLink from "@/utils/composeCDNAssetLink";
import Button from "../Button";
const t = useTranslations(Astro.url.pathname);
---

<div
  class={`relative flex flex-col justify-center items-center box-border
    bg-[url("https://cdn.gdlauncher.com/assets/github_issues.png")] bg-no-repeat py-20 lg:py-32`}
>
  <div
    class="w-4/5 lg:w-full z-20 flex flex-col-reverse lg:flex-row justify-between items-center gap-20 max-w-7xl"
  >
    <div class="absolute top-0 bottom-0 left-0 right-0">
      <div
        class="absolute top-0 bottom-0 left-0 right-0 z-10 opacity-95 bg-slate-900"
      >
      </div>
    </div>
    <div class="py-0 px-4 z-20">
      <h3 class="text-4xl lg:text-6xl mb-12 font-bold">
        {t("generic.partners")}
      </h3>
      <div
        class="flex flex-col md:flex-row justify-center items-start lg:items-center gap-20 md:gap-0"
      >
        <div
          class="flex flex-col md:flex-row justify-between items-center gap-20"
        >
          <div class="z-20">
            <img
              class="w-full"
              src={composeCDNAssetLink("bisect_wide_logo.svg")}
              alt="launcher_mockup"
            />
          </div>
          <p class="text-xl font-light max-w-md">
            {t("generic.donate_kofi_text")}
          </p>
        </div>
        <a href="https://www.bisecthosting.com/gdl" target="_blank">
          <Button class="h-4">{t("generic.getAServer")}</Button>
        </a>
      </div>
    </div>
  </div>
</div>
